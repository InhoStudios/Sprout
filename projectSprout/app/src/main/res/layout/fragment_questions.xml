<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/ageInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="104dp" />

    <EditText
        android:id="@+id/youngestInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="197dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

    </RadioGroup>





    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How old are you?"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="85dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's the youngest you're willing to meet?"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="176dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's your gender?"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="284dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your sexual orientation?"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="406dp" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_black"
        android:text="Questionnaire"
        android:textFontWeight="800"
        android:textSize="35sp"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="16dp" />

    <RadioGroup>



    <RadioButton
        android:id="@+id/radioButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Homosexual"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="451dp" />

    <RadioButton
        android:id="@+id/radioButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Other"
        app:layout_constraintStart_toEndOf="@+id/radioButton5"
        tools:layout_editor_absoluteY="451dp" />
    </RadioGroup>

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="Woman"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="324dp" />

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="Heterosexual"
        app:layout_constraintEnd_toStartOf="@+id/radioButton5"
        tools:layout_editor_absoluteY="451dp" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="96dp"
        android:layout_height="44dp"
        android:text="Other"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="324dp" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="89dp"
        android:layout_height="46dp"
        android:text="Man"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="324dp" />

</androidx.constraintlayout.widget.ConstraintLayout>